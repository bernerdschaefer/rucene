%html
  %head
    :css
      body { font: 1.5em/1.5em sans-serif; color: #333; margin: 2em; width: 800px }
      input { font-size: 1em; }
      fieldset { border: 0; border-bottom: 5px solid #ccc; margin: 0; padding: 0; }
      label { display: block; }
      input[type=text] { width: 100%; }
      textarea { font-size: 1em; height: 5em; width: 100%; }
      .speaker { float: left; margin-right: 3em; width: 40%; }
      .speakers { float: left; width: 40%; }
      .speakers form { margin: 0 0 1em 0; }
      h3 { margin: 0; line-height: 1.2em; }
      h4 { color: #999; margin: 0; line-height: 1em; }
  %body
